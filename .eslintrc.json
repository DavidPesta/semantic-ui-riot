{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-var": 2
  },
  "plugins": [
    "html"
  ],
  "settings": {
    "html/html-extensions": [
      ".html",
      ".tag"
    ]
  },
  "globals": {
    "riot": true,
    "route": true,
    "sa": true,
    "observable": true,
    "opts": true,
    "__dirname": true
  }
}